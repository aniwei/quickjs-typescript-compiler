{
  "name": "quickjs-typescript",
  "version": "0.1.0",
  "description": "TypeScript to QuickJS Bytecode Compiler",
  "main": "dist/compiler.js",
  "scripts": {
    "gen:env": "tsx scripts/gen-env.ts",
    "build": "npm run gen:env && tsc",
    "build:wasm": "tsx scripts/buildWasm.ts",
    "start": "tsx src/cli.ts",
    "compile": "tsx scripts/compile.ts",
    "eval": "tsx scripts/eval.ts",
    "test:advanced": "pnpm -s start __tests__/advanced.ts --disasm --pc2line --debug && pnpm -s exec qjs dist/advanced.bin",
    "dump": "tsx scripts/dump.ts",
    "qjsc": "docker run --rm -v $(pwd):/app aniwei/quickjs qjsc",
    "compare": "tsx scripts/compare-with-wasm.ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "tsx": "^4.20.5"
  }
}